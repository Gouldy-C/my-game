{
  "appId": "com.my-game.app",
  "productName": "My Game",
  "directories": {
    "output": "dist"
  },
  "files": [
    "dist-electron/**/*",
    "dist-ui/**/*",
    "!dist-electron/**/*.map",
    "!dist-ui/**/*.map",
    "package.json"
  ],
  "extraMetadata": {
    "main": "dist-electron/main.js"
  },
  "mac": {
    "target": "dmg",
    "category": "public.app-category.games"
  },
  "linux": {
    "target": "AppImage",
    "category": "Game"
  },
  "win": {
    "target": "nsis",
    "forceCodeSigning": false,
    "signAndEditExecutable": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
